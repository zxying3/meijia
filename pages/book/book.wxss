/* pages/book/book.wxss */
.header{
  width:100%;
  height:350rpx;
}
.people{
  font-weight: bold;
  padding:20rpx 40rpx;
}
.people-picker{
  width:670rpx;
  padding:20rpx;
  margin:20rpx auto;
  border-radius:20rpx;
  border:2rpx solid #ccc;
  font-size:30rpx;
}
.date{
  display:flex;
  flex-direction: row;
  justify-content: space-around;
}
.date-icon{
  width:60rpx;
  height:60rpx;
}
.date-picker{
  width:200rpx;
  padding:20rpx;
  border-radius:20rpx;
  border:2rpx solid #ccc;
}
.time-picker{
  width:140rpx;
  padding:20rpx;
  border-radius:20rpx;
  border:2rpx solid #ccc;
}
