/**index.wxss**/
.banner image {
  width: 100%;
  height: 400rpx;
}

.nav {
  display: flex;
  width: 100%;
  height: 180rpx;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  background-color: #000;
}

.nav image {
  width: 100rpx;
  height: 80rpx;
  border-radius: 50%;
}

.white {
  color: #fff;
}

.active {
  color: #d24a58;
}

/* list列表 */

.list_container {
  display: flex;
  position:relative;
  width: 100%;
  height: 160rpx;
  margin-top: 20rpx;
  border-bottom: 1px solid #ddd;
}

.list_container image {
  width: 120rpx;
  height: 120rpx;
  padding-left:20rpx;
  border-radius: 4rpx;
}

.text_container {
  display: flex;
  flex-direction: column;
  padding-left:30rpx;
}
.subject{
  color:#000;
  margin-bottom:20rpx;
}
.price {
  color: red;
}
.message{
  color:#999;
  font-size:28rpx;
}
.book{
  position:absolute;
  width:80rpx;
  height:80rpx;
  right:20rpx;
  top:30rpx;
  background-color: #d24a58;
  border-radius:50%;
  line-height:80rpx;
  text-align:center;
  color:#fff;
  font-size:26rpx;
}
